CREATE TABLE foo(time TIMESTAMPTZ, data INTEGER);
SELECT create_hypertable('foo', 'time');

CREATE VIEW rename_test WITH ( timescaledb.continuous_agg = 'start')
AS SELECT time_bucket('1week', time), COUNT(data)
    FROM foo
    GROUP BY 1;

